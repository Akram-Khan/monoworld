<!DOCTYPE html>
<html>
<head>
  <title>Monoworld</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id = "all_content">
	<%=render "layouts/header"%>

	<%flash.each do |key,value|%>
    <div class="content">
    	<div class="section">
		    <div class="row">
		      <div class="flash <%=key%> alert-box eight columns"><%=value%></div>
		    </div>
	    </div>
    </div>
	<%end%>
	
	<%= yield %>
</div>


<%=render "layouts/footer"%>

</body>
</html>
