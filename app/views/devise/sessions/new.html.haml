.content
	.section
		.row
			.twelve.columns
				%h5 
					%strong LOGIN
				%hr
		.row
			.five.columns.give-right-border
				.row
					.twelve.columns
						=form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => true) do |f|
							%ul
								%li=f.text_field :email, :placeholder => "Email", :class => "custom-textarea"
								%li=f.password_field :password, :placeholder => "Password", :class => "custom-textarea"
								%li=f.submit :class => "small black button", :value => "Login"
					%ul
						%li= render :partial => "devise/shared/links"
			.five.columns
				.row
					.container
						.row
							.seven.columns.social-media
								.row
									=link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
								.row
									=link_to "Sign in with google", user_omniauth_authorize_path(:google)
							.two.columns
.container
